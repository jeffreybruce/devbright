@model IEnumerable<devbright.Models.Lead>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Manually Enter Lead", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            Home Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.homeTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.leadID }) |
            @Html.ActionLink("Details", "Details", new { id=item.leadID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.leadID })
        </td>
    </tr>
}

</table>
